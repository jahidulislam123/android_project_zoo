<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Replace with your desired background color -->
            <corners android:radius="20dp"/> <!-- Adjust the radius value to control the roundness -->
        </shape>
    </item>
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Shadow color (adjust transparency as needed) -->
            <corners android:radius="20dp"/> <!-- Same radius value as the button shape -->
        </shape>
    </item>
</layer-list>
