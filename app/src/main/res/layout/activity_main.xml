<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_primary40"
        android:textColor="@color/white"
        android:text="Welcome to ZOO Application" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/image_one" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/image_two" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/virtualTourButton9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Let's Play"
            android:onClick="newsFunction"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:background="@drawable/button_background" />

        <Button
            android:id="@+id/bookTicketButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Animal"
            android:layout_weight="1"
            android:onClick="animalFunction"
            android:layout_marginStart="8dp"
            android:elevation="8dp"
            android:background="@drawable/button_background" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/quiz" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/others" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/virtualTourButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pets"
            android:onClick="feedingFunction"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:background="@drawable/button_background" />

        <Button
            android:id="@+id/bookTicketButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="post"
            android:onClick="postFunction"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:elevation="8dp"
            android:background="@drawable/button_background" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/image_two" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/image_one" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/virtualTourButton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Games"
            android:onClick="gamesFunction"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:background="@drawable/button_background" />

        <Button
            android:id="@+id/bookTicketButton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:onClick="visitFunction"
            android:elevation="8dp"
            android:background="@drawable/button_background" />

    </LinearLayout>



</LinearLayout>


